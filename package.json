{
  "name": "vite-lit-library-starter",
  "version": "0.0.0",
  "description": "WIP",
  "repository": "ms-fadaei/vite-lit-library-starter",
  "homepage": "https://github.com/ms-fadaei/vite-lit-library-starter",
  "license": "MIT",
  "keywords": [
    "vite",
    "lit",
    "library",
    "starter-template",
    "boilerplate",
    "typescript"
  ],
  "main": "./dist/elements.cjs",
  "module": "./dist/elements.mjs",
  "exports": {
    ".": {
      "import": "./dist/elements.mjs",
      "require": "./dist/elements.cjs"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "dev": "vite --config ./playground/vite.config.ts",
    "generate": "vite --config ./playground/vite.config.ts build",
    "build": "vite build",
    "lint": "eslint --ext .ts --ignore-path .gitignore .",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "prepare": "husky install",
    "release": "yarn test && npx standard-version && git push --follow-tags && npm publish"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*": "prettier -w -u"
  },
  "devDependencies": {
    "@types/node": "17.0.17",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "@vitest/ui": "0.9.3",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "happy-dom": "2.55.0",
    "husky": "7.0.4",
    "jsdom": "19.0.0",
    "lint-staged": "12.3.7",
    "path": "0.12.7",
    "prettier": "2.6.2",
    "standard-version": "9.3.2",
    "typescript": "4.6.3",
    "vite": "2.9.1",
    "vitest": "0.9.3"
  },
  "dependencies": {
    "lit": "^2.2.0"
  }
}
